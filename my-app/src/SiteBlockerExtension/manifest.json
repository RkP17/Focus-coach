{
    "manifest_version": 2,
    "name":"Blocker with timer",
    "version":"0.0.1",
    "permissions": [
        "storage",
        "webRequest",
        "webRequestBlocking",
        "<all_urls>",
        "tabs",
        "activeTab"
    ],
    "background": {
        "scripts": ["background.js"],
        "persistent": true
     },
    "options_page": "build/index.html",
    "content_scripts":[
        {
            "matches":["<all_urls>"],
            "js":["background.js"]
        }
    ],
    "icons": { "48": "icon48.png", "128": "icon128.png" },
    "browser_action": {
        "default_popup": "popup.html",
        "default_title": "Site Blocker"
    }
}